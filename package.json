{
  "name": "@mittwald/api-tools",
  "version": "3.0.0",
  "private": true,
  "scripts": {
    "all": "yarn workspaces foreach -Atv --no-private",
    "compile": "yarn all run compile",
    "format": "prettier --write $@ '{packages/**,apps/**}*.{ts,tsx,yaml,yml,json,md,mdx}'",
    "license-check": "yarn pnpify license-checker-rseidelsohn --excludePackages '@mittwald/api-tools'",
    "lint": "eslint . --cache",
    "test": "yarn lint && yarn format --check && yarn test:packages && yarn test:licenses",
    "test:licenses": "yarn license-check --summary --unknown && yarn license-check --unknown --failOn 'UNLICENSED;UNKNOWN'",
    "test:packages": "yarn all run test"
  },
  "devDependencies": {
    "@types/copyfiles": "^2.4.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@yarnpkg/pnpify": "^4.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "license-checker-rseidelsohn": "^4.2.10",
    "prettier": "^2.8.8",
    "prettier-plugin-jsdoc": "^0.4.2",
    "prettier-plugin-package": "^1.3.1",
    "prettier-plugin-sort-json": "^1.0.0",
    "rimraf": "^5.0.5",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "packageManager": "yarn@4.0.1",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
