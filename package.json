{
  "name": "root",
  "private": true,
  "version": "3.0.0",
  "packageManager": "yarn@4.0.2",
  "type": "module",
  "scripts": {
    "build": "lerna run build",
    "format": "yarn format:base --write",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "test:licenses": "yarn test:licenses:base --unknown --failOn 'UNLICENSED;UNKNOWN'",
    "test:licenses:base": "yarn pnpify license-checker-rseidelsohn --excludePackages 'root'",
    "test:packages": "lerna run test",
    "api-client:spec:refresh": "lerna run spec:refresh --scope=@mittwald/api-client",
    "api-client:build": "lerna run build --scope=@mittwald/api-client",
    "postinstall": "yarn dlx simple-git-hooks"
  },
  "simple-git-hooks": {
    "post-checkout": "yarn install",
    "post-merge": "yarn install",
    "pre-commit": "yarn lint"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@yarnpkg/pnpify": "^4.0.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "lerna": "^8.0.0",
    "license-checker-rseidelsohn": "^4.2.10",
    "nx": "^17.1.3",
    "prettier": "^3.1.0",
    "prettier-plugin-jsdoc": "^1.1.1",
    "prettier-plugin-pkgsort": "^0.2.1",
    "prettier-plugin-sort-json": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "workspaces": [
    "packages/*"
  ]
}
