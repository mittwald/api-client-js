{
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "ES2019",
    "lib": ["es2019"],
    "module": "commonjs"
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"]
}
