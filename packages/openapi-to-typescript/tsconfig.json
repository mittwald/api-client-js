{
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es2022",
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext"
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"]
}
