{
  "affected": {
    "defaultBase": "master"
  },
  "namedInputs": {
    "config": ["{projectRoot}/*.{cjs,js,ts,mjs,json}"],
    "src": [
      "{projectRoot}/src/**/*.ts",
      "!{projectRoot}/src/**/*.{test,test-types}.*"
    ],
    "test": ["{projectRoot}/src/**/*.{test,test-types}.*"],
    "default": ["src", "config"],
    "production": ["default"]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "lint": {
      "cache": true,
      "inputs": ["{projectRoot}/src", "{projectRoot}/.eslintignore"]
    },
    "test": {
      "inputs": ["test", "default", "^default"],
      "dependsOn": ["^build"],
      "cache": true
    }
  }
}
