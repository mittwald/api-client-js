{
  "version": "1.0.0",
  "license": "UNLICENSED",
  "author": {},
  "name": "@mittwald/work",
  "scripts": {
    "precommit:format": "run-s test:staged-formatted",
    "precommit": "run-s precommit:*",
    "precommit:lint": "run-s lint:staged",
    "copy-package-json": "cp package.json $(yarn -s ts-out-dir)",
    "prepublish:all": "run-s compile 'prepublish:!(all)'",
    "prepublish:readme": "cp README.md $(yarn -s ts-out-dir)",
    "prepublish:copy-package-json": "run-s copy-package-json",
    "base:pull": "docker pull gitlab-registry.mittwald.it/coab-0x7e7/tools/project-base",
    "base:generate": "docker run -ti --rm -v \"$(pwd):/work\" gitlab-registry.mittwald.it/coab-0x7e7/tools/project-base",
    "base:update": "run-s base:pull base:generate",
    "ts-out-dir": "cat tsconfig.json | yarn -s jp --log /compilerOptions/outDir",
    "clean": "mkdir -p $(yarn -s ts-out-dir) && rm -rf $(yarn -s ts-out-dir)/*",
    "precompile": "run-s clean precompile:*",
    "precompile:default": "# i'm just here to make precompile:* find anything",
    "compile": "yarn tsc -p tsconfig.dist.json",
    "test:compile": "run-s compile",
    "test:all-formatted": "prettier --check -c ./.prettierrc '**/*.{ts,tsx,yaml,yml,json,md}'",
    "test:staged-formatted": "prettier --check $(git -C ${PWD} diff --relative --staged --diff-filter=ACMR --name-only -- '*ts' '*.tsx' '*.json' '*.md' '*.yaml' '*.yml') package.json || (echo 'Your code is ugly. Run `yarn format` to use prettier.' && exit 1)",
    "format": "prettier --write -c ./.prettierrc '**/*.{ts,tsx,yaml,yml,json,md}'",
    "format:staged": "prettier --write $(git -C ${PWD} diff --relative --staged --diff-filter=ACMR --name-only -- '*ts' '*.tsx' '*.json' '*.md' '*.yaml' '*.yml') package.json",
    "test:lint": "yarn lint",
    "lint": "eslint 'src/**/*.{ts,tsx}' 2>/dev/null",
    "lint:staged": "eslint $(git -C ${PWD} diff --relative --staged --diff-filter=ACMR --name-only -- '*.ts' '*.tsx') 1>/dev/null || (echo 'ESlint failed. Run `yarn lint` to see error details' && exit 1)",
    "test:no-changes": "git diff --exit-code",
    "test:unit": "jest --color --silent --verbose --coverage --passWithNoTests",
    "test:all": "run-s 'test:!(all)'"
  },
  "devDependencies": {
    "@types/change-case": "^2.3.1",
    "@types/debug": "^4.1.5",
    "@types/dot-prop": "^5.0.1",
    "@types/jest": "^25.1.0",
    "@types/js-yaml": "^3.12.2",
    "@types/node": "^13.5.1",
    "@types/swagger-parser": "^7.0.1",
    "@types/verror": "^1.10.3",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "jsonpointer-cli": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "ts-jest": "^25.0.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@mittwald/awesome-node-utils": "^2.10.0",
    "change-case": "^4.1.1",
    "debug": "^4.1.1",
    "dot-prop": "^5.2.0",
    "js-yaml": "^3.13.1",
    "json-schema-typed": "^7.0.3",
    "openapi-types": "^1.3.5",
    "read-pkg-up": "^7.0.1",
    "swagger-parser": "^8.0.4",
    "verror": "^1.10.0"
  }
}
